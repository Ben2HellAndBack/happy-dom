{
	"name": "@happy-dom/server-rendering",
	"version": "2.25.2",
	"license": "MIT",
	"homepage": "https://github.com/capricorn86/happy-dom/tree/master/packages/server-rendering",
	"repository": "https://github.com/capricorn86/happy-dom",
	"author": "David Ortner",
	"description": "Server side rendering of web components with happy-dom.",
	"main": "lib/index.js",
	"keywords": [
		"jsdom",
		"dom",
		"browser",
		"custom",
		"elements",
		"web",
		"components",
		"html",
		"whatwg",
		"w3c",
		"server",
		"render"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"compile": "tsc",
		"watch": "tsc -w --preserveWatchOutput",
		"lint": "eslint --ignore-path .gitignore --max-warnings 0 .",
		"lint:fix": "eslint --ignore-path .gitignore --max-warnings 0 --fix .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:update-snapshot": "jest --updateSnapshot",
		"test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testMatch": [
			"**/test/**/*.test.ts"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "./test/tsconfig.json"
			}
		},
		"testEnvironment": "node"
	},
	"dependencies": {
		"css-tree": "^1.0.0-alpha.29",
		"happy-dom": "^2.25.2",
		"he": "^1.1.1",
		"memory-fs": "^0.5.0",
		"webpack": "^4.41.2"
	},
	"devDependencies": {
		"@types/he": "latest",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.6.0",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.0",
		"eslint-plugin-jsdoc": "^30.4.0",
		"eslint-plugin-json": "^2.0.1",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^26.6.3",
		"prettier": "^1.19.1",
		"ts-jest": "^26.5.6",
		"typescript": "^4.2.4"
	}
}
