{
	"name": "@happy-dom/jest-environment",
	"version": "2.16.2",
	"license": "MIT",
	"homepage": "https://github.com/capricorn86/happy-dom/tree/master/packages/jest-environment",
	"repository": "https://github.com/capricorn86/happy-dom",
	"author": "David Ortner",
	"description": "A Jest DOM environment with support for web components using happy-dom.",
	"main": "lib/index.js",
	"keywords": [
		"jest",
		"environment",
		"jsdom",
		"happy",
		"dom",
		"webcomponents",
		"web",
		"component",
		"custom",
		"elements"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"compile": "node ./bin/build-lit-ts-config && tsc --project tmp/tsconfig.lit-element.json && tsc --project tmp/tsconfig.lit-html.json && tsc",
		"watch": "npm run compile && tsc -w --preserveWatchOutput",
		"lint": "eslint --max-warnings 0 --fix './src/**/*.ts'",
		"test": "jest",
		"test:watch": "jest --runInBand --watch",
		"test:update-snapshot": "jest --runInBand --updateSnapshot",
		"test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
	},
	"jest": {
		"transform": {
			"^.+\\.(ts|tsx)?$": "ts-jest"
		},
		"testMatch": [
			"**/test/**/*.test.ts",
			"**/test/**/*.test.tsx"
		],
		"testEnvironment": "./lib"
	},
	"dependencies": {
		"@jest/environment": "^26.2.0",
		"@jest/fake-timers": "^26.2.0",
		"@jest/types": "^26.2.0",
		"happy-dom": "^2.16.2",
		"jest-mock": "^26.2.0",
		"jest-util": "^26.2.0"
	},
	"devDependencies": {
		"@angular/common": "^10.0.7",
		"@angular/compiler": "^10.0.7",
		"@angular/core": "^10.0.7",
		"@angular/platform-browser": "^10.0.7",
		"@angular/platform-browser-dynamic": "^10.0.7",
		"@types/jest": "^24.0.11",
		"@types/node": "^12.6.8",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/parser": "^1.9.0",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "^26.2.2",
		"jquery": "^3.5.1",
		"lit-element": "^2.4.0",
		"prettier": "^1.16.4",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"ts-jest": "^26.1.4",
		"typescript": "^3.4.5",
		"vue": "^2.6.12",
		"zone.js": "^0.10.3"
	}
}
