{
	"name": "@happy-dom/jest-environment",
	"version": "2.20.1",
	"license": "MIT",
	"homepage": "https://github.com/capricorn86/happy-dom/tree/master/packages/jest-environment",
	"repository": "https://github.com/capricorn86/happy-dom",
	"author": "David Ortner",
	"description": "A Jest DOM environment with support for web components using happy-dom.",
	"main": "lib/index.js",
	"keywords": [
		"jest",
		"environment",
		"jsdom",
		"dom",
		"browser",
		"custom",
		"elements",
		"web",
		"components",
		"html",
		"whatwg",
		"w3c"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"compile": "node ./bin/build-lit-ts-config && tsc --project tmp/tsconfig.lit-element.json && tsc --project tmp/tsconfig.lit-html.json && tsc",
		"watch": "npm run compile && tsc -w --preserveWatchOutput",
		"lint": "eslint --ignore-path .gitignore --max-warnings 0 .",
		"lint:fix": "eslint --ignore-path .gitignore --max-warnings 0 --fix .",
		"test": "jest",
		"test:watch": "jest --runInBand --watch",
		"test:update-snapshot": "jest --runInBand --updateSnapshot",
		"test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
	},
	"jest": {
		"transform": {
			"^.+\\.(ts|tsx)?$": "ts-jest"
		},
		"testMatch": [
			"**/test/**/*.test.ts",
			"**/test/**/*.test.tsx"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "./test/tsconfig.json"
			}
		},
		"testEnvironment": "./lib"
	},
	"dependencies": {
		"@jest/environment": "^26.6.2",
		"@jest/fake-timers": "^26.6.2",
		"@jest/types": "^26.6.2",
		"happy-dom": "^2.20.1",
		"jest-mock": "^26.6.2",
		"jest-util": "^26.6.2"
	},
	"devDependencies": {
		"@angular/common": "^10.0.7",
		"@angular/compiler": "^10.0.7",
		"@angular/core": "^10.0.7",
		"@angular/platform-browser": "^10.0.7",
		"@angular/platform-browser-dynamic": "^10.0.7",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.6.0",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.0",
		"eslint-plugin-jsdoc": "^30.4.0",
		"eslint-plugin-json": "^2.0.1",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^26.6.3",
		"jquery": "^3.5.1",
		"lit-element": "^2.4.0",
		"prettier": "^1.19.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"ts-jest": "^26.5.6",
		"typescript": "^4.2.4",
		"vue": "^2.6.12",
		"zone.js": "^0.10.3"
	}
}
